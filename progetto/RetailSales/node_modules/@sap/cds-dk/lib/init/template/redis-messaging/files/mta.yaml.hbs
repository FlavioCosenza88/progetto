---
modules:
 - name: {{cap.appName}}-srv
   type: {{cap.language}}
   path: {{& cap.srvPath}}
   requires:
    - name: {{cap.appName}}-redis

resources:
  - name: {{cap.appName}}-redis
    type: org.cloudfoundry.managed-service
    parameters:
      service: redis-cache
      service-plan: default
