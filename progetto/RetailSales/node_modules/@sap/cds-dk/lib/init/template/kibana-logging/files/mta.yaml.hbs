---
modules:
  - name: {{cap.appName}}-srv
    type: {{cap.language}}
    path: {{& cap.srvPath}}
    requires:
      - name: {{cap.appName}}-cf-logging

resources:
  - name: {{cap.appName}}-cf-logging
    type: org.cloudfoundry.managed-service
    parameters:
      service: application-logs
      service-plan: lite